<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CBCDCD"
    tools:context=".Ara">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="264dp"
        android:layout_height="677dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/txtTerim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="21dp"
            android:ems="10"
            android:hint="Terim Ara/Ekle"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txtAnlam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginTop="44dp"
            android:hint="Anlam"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnListeyeEkle"
            android:layout_width="155dp"
            android:layout_height="75dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="57dp"
            android:onClick="ekle2"
            android:backgroundTint="#C57575"
            android:text="Listeye Ekle" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="35dp"
        android:onClick="ara2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout7"
        app:layout_constraintTop_toTopOf="@+id/linearLayout7"
        app:srcCompat="@drawable/png_transparent_computer_icons_magnifying_glass_magnifying_glass_glass_magnifier_black_and_white" />

</androidx.constraintlayout.widget.ConstraintLayout>